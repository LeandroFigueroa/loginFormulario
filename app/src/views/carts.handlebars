{{#if cart.products}}
        {{#each cart.products}}
            <div class="conteiner-fluid d-flex flex-column align-items-center">
                <div class="card text-center" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{_id.[0].title}}</h5>
                        <p class="card-text">{{_id.[0].description}}</p>
                        <p class="card-text">Talle: {{_id.[0].size}}</p>
                        <h6 class="card-text">${{_id.[0].price}}</h6>
                        <div class="d-flex justify-content-center align-items-center">
                            <button type="button" class='btn btn-outline-dark mx-2' onclick="deleteProduct('{{_id.[0]._id}}')">-</button>
                                <h3 class='mb-2'>Cantidad {{quantity}}</h3>
                            <button class='btn btn-outline-dark mx-2' onclick="addProduct('{{_id.[0]._id}}')">+</button>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
{{else}}
    <div class="text-center mt-4"><h1>No hay productos en tu carrito</h1></div>
{{/if}}

